    "test": "jest",
    "lint": "next lint",
    "lint:pre-commit": "eslint --ext .js,.jsx,.ts,.tsx --fix",
    "lint:css": "stylelint './**/**/*.styles.ts'",
    "prepare": "husky install",
    "format:css": "stylelint './**/**/*.styles.ts'  --fix"
  },
  "dependencies": {
    "@babel/eslint-parser": "^7.17.0",
